    <script>
        // Mapping Bloomberg/common symbols to Yahoo Finance symbols
        const symbolMapping = {
            'SPX Index': '^GSPC',
            'NKY Index': '^N225',
            'HSCEI': '^HSCE',
            'FBMKLCI': '^KLSE',
            'Gold': 'GC=F',
            'USGG10YR': '^TNX',
            'USDMYR Curncy': 'MYR=X',
            'SXXP Index': '^STOXX50E',
            'MXWD Index': 'ACWI',
            'MXASJ Index': 'EWJ',
            'MGIY10Y Index': 'TLT'
        };

        const defaultSymbols = [
            '^GSPC',      // S&P 500
            '^N225',      // Nikkei
            '^HSCE',      // Hang Seng China Enterprises
            '^KLSE',      // FTSE Malaysia
            'GC=F',       // Gold Futures
            '^TNX',       // 10-Year Treasury
            'MYR=X',      // USD/MYR
            '^STOXX50E',  // Euro Stoxx 50
            'ACWI',       // MSCI ACWI ETF
            'EWJ',        // Japan ETF
            'TLT'         // 20+ Year Treasury ETF
        ];

        function initializeDates() {
            const endDate = new Date();
            const startDate = new Date();
            startDate.setDate(startDate.getDate() - 7);
            
            document.getElementById('endDate').valueAsDate = endDate;
            document.getElementById('startDate').valueAsDate = startDate;
        }

        function initializeTable() {
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';
            
            defaultSymbols.forEach(symbol => {
                addRow(symbol);
            });
        }

        function addRow(symbol = '') {
            const tbody = document.getElementById('tableBody');
            const row = tbody.insertRow();
            row.innerHTML = `
                <td><input type="text" value="${symbol}" placeholder="e.g., ^GSPC, AAPL, GC=F" class="symbol-input"></td>
                <td class="name">-</td>
                <td class="current-price">-</td>
                <td class="previous-price">-</td>
                <td class="change-pct">-</td>
                <td><button class="delete-btn" onclick="deleteRow(this)">Delete</button></td>
            `;
        }

        function addNewRow() {
            addRow('');
        }

        function deleteRow(btn) {
            const row = btn.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }

        async function getYahooFinanceData(symbol, startDate, endDate) {
            try {
                // Using Yahoo Finance API through yfinance endpoints
                const quoteUrl = `https://query1.finance.yahoo.com/v8/finance/chart/${symbol}?interval=1d&range=1mo`;
                
                const response = await fetch(quoteUrl);
                const data = await response.json();
                
                if (data.chart && data.chart.result && data.chart.result[0]) {
                    const result = data.chart.result[0];
                    const meta = result.meta;
                    const quote = result.indicators.quote[0];
                    const timestamps = result.timestamp;
                    
                    // Get current price (most recent close)
                    const currentPrice = quote.close[quote.close.length - 1];
                    
                    // Get previous price (7 days ago or closest available)
                    const daysAgo = Math.min(7, quote.close.length - 1);
                    const previousPrice = quote.close[quote.close.length - 1 - daysAgo];
                    
                    return {
                        symbol: symbol,
                        name: meta.longName || meta.shortName || symbol,
                        currentPrice: currentPrice,
                        previousPrice: previousPrice,
                        currency: meta.currency || 'USD'
                    };
                }
                throw new Error('No data available');
            } catch (error) {
                console.error(`Error fetching ${symbol}:`, error);
                return {
                    symbol: symbol,
                    name: 'Error',
                    currentPrice: null,
                    previousPrice: null,
                    error: error.message
                };
            }
        }

        async function refreshData() {
            const btn = document.getElementById('refreshBtn');
            btn.disabled = true;
            btn.textContent = '‚è≥ Loading...';
            
            const tbody = document.getElementById('tableBody');
            const rows = tbody.getElementsByTagName('tr');
            const symbolsData = [];
            
            // Clear previous data
            for (let row of rows) {
                row.querySelector('.name').textContent = 'Loading...';
                row.querySelector('.current-price').textContent = 'Loading...';
                row.querySelector('.previous-price').textContent = 'Loading...';
                row.querySelector('.change-pct').textContent = 'Loading...';
            }
            
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            // Fetch data for each symbol
            for (let i = 0; i < rows.length; i++) {
                const row = rows[i];
                const symbolInput = row.querySelector('.symbol-input');
                const symbol = symbolInput.value.trim();
                
                if (symbol) {
                    const data = await getYahooFinanceData(symbol, startDate, endDate);
                    symbolsData.push(data);
                    
                    // Update table
                    row.querySelector('.name').textContent = data.name;
                    
                    if (data.currentPrice && data.previousPrice) {
                        const currentPrice = data.currentPrice.toFixed(2);
                        const previousPrice = data.previousPrice.toFixed(2);
                        const changePercent = (((data.currentPrice - data.previousPrice) / data.previousPrice) * 100).toFixed(2);
                        
                        row.querySelector('.current-price').textContent = `${data.currency} ${currentPrice}`;
                        row.querySelector('.previous-price').textContent = `${data.currency} ${previousPrice}`;
                        
                        const changeTd = row.querySelector('.change-pct');
                        changeTd.textContent = changePercent + '%';
                        changeTd.className = 'change-pct ' + (changePercent >= 0 ? 'positive' : 'negative');
                    } else {
                        row.querySelector('.current-price').textContent = 'N/A';
                        row.querySelector('.previous-price').textContent = 'N/A';
                        row.querySelector('.change-pct').textContent = 'Error';
                    }
                }
            }
            
            btn.disabled = false;
            btn.textContent = 'üîÑ Refresh Data';
            
            // Show info about Claude API integration
            displayAnalysisInfo(symbolsData);
        }

        async function displayAnalysisInfo(symbolsData) {
            const analysisSection = document.getElementById('analysisSection');
            
            const significantMoves = symbolsData.filter(d => {
                if (!d.currentPrice || !d.previousPrice) return false;
                const changePercent = Math.abs(((d.currentPrice - d.previousPrice) / d.previousPrice) * 100);
                return changePercent > 0.5; // Only analyze moves > 0.5%
            });
            
            if (significantMoves.length === 0) {
                analysisSection.innerHTML = `
                    <div class="info">
                        <h3>‚úÖ Data loaded successfully!</h3>
                        <p>No significant movements (>0.5%) detected in the selected period.</p>
                    </div>
                `;
                return;
            }
            
            analysisSection.innerHTML = `
                <div class="loading">
                    <h3>üîç Analyzing ${significantMoves.length} significant market movements...</h3>
                    <p>Claude is searching for news and analyzing price drivers...</p>
                </div>
            `;
            
            try {
                const startDate = document.getElementById('startDate').value;
                const endDate = document.getElementById('endDate').value;
                
                // Prepare data for backend
                const symbolsForAnalysis = significantMoves.map(d => ({
                    symbol: d.symbol,
                    name: d.name,
                    changePercent: parseFloat((((d.currentPrice - d.previousPrice) / d.previousPrice) * 100).toFixed(2))
                }));
                
                // Call backend API
                const response = await fetch('http://localhost:5000/analyze', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        symbols: symbolsForAnalysis,
                        startDate: startDate,
                        endDate: endDate
                    })
                });
                
                if (!response.ok) {
                    throw new Error(`Backend error: ${response.statusText}`);
                }
                
                const result = await response.json();
                
                // Display analyses
                analysisSection.innerHTML = '<h2 style="margin-bottom: 20px; color: #495057;">üì∞ Market News Analysis (100% Free)</h2>';
                
                result.analyses.forEach(analysis => {
                    const card = document.createElement('div');
                    card.className = 'analysis-card';
                    
                    const changeClass = analysis.changePercent >= 0 ? 'positive' : 'negative';
                    const changeSign = analysis.changePercent >= 0 ? '+' : '';
                    
                    let driversHtml = '<ul class="drivers">';
                    analysis.analysis.drivers.forEach((driver, idx) => {
                        driversHtml += `<li><strong>Driver ${idx + 1}:</strong> ${driver}</li>`;
                    });
                    driversHtml += '</ul>';
                    
                    let sourcesHtml = '';
                    if (analysis.analysis.sources.length > 0) {
                        sourcesHtml = '<div class="sources"><h4>üì∞ Sources:</h4>';
                        analysis.analysis.sources.forEach(source => {
                            // Try to extract URL if present
                            const urlMatch = source.match(/(https?:\/\/[^\s]+)/);
                            if (urlMatch) {
                                const url = urlMatch[1];
                                const text = source.replace(url, '').trim();
                                sourcesHtml += `<a href="${url}" target="_blank">${text || url}</a>`;
                            } else {
                                sourcesHtml += `<a href="#" onclick="return false;">${source}</a>`;
                            }
                        });
                        sourcesHtml += '</div>';
                    }
                    
                    card.innerHTML = `
                        <h3>
                            <span class="symbol">${analysis.symbol}</span>
                            <span style="color: #6c757d; font-size: 0.9em;">${analysis.name}</span>
                            <span class="${changeClass}" style="margin-left: auto; font-size: 1em;">${changeSign}${analysis.changePercent.toFixed(2)}%</span>
                        </h3>
                        ${driversHtml}
                        ${sourcesHtml}
                    `;
                    
                    analysisSection.appendChild(card);
                });
                
            } catch (error) {
                analysisSection.innerHTML = `
                    <div class="error">
                        <h3>‚ö†Ô∏è Backend Connection Error</h3>
                        <p><strong>Error:</strong> ${error.message}</p>
                        <p style="margin-top: 10px;">Make sure the Python backend server is running:</p>
                        <ol style="margin-left: 20px; margin-top: 10px;">
                            <li>Install dependencies: <code>pip install -r requirements.txt</code></li>
                            <li>Run server: <code>python app.py</code></li>
                            <li>No API keys needed - it's 100% free!</li>
                        </ol>
                    </div>
                `;
            }
        }

        // Initialize on page load
        window.onload = function() {
            initializeDates();
            initializeTable();
        };
    </script>
</body>
</html>
